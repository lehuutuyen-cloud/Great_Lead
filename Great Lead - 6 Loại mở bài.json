    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --brand-color: #ea580c; /* orange-600 */
            --brand-color-light: #fed7aa; /* orange-200 */
            --brand-color-dark: #c2410c; /* orange-700 */
            --bg-light: #f8fafc; /* slate-50 */
            --text-primary: #1e293b; /* slate-800 */
            --text-secondary: #475569; /* slate-600 */
        }
        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--bg-light);
            color: var(--text-primary);
        }
        h1, h2, h3, h4, h5, h6 {
            font-weight: 900;
        }
        .prose {
            max-width: 80ch;
        }
        .prose h2 {
            font-size: 2.25rem; /* 36px */
            line-height: 2.75rem; /* 44px */
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--brand-color);
            letter-spacing: -0.025em;
        }
        .prose h3 {
            font-size: 1.875rem; /* 30px */
            line-height: 2.25rem; /* 36px */
            margin-top: 2.5rem;
            margin-bottom: 1.25rem;
            letter-spacing: -0.025em;
        }
        .prose h4 {
            font-size: 1.5rem; /* 24px */
            line-height: 2rem; /* 32px */
            font-weight: 700;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }
        .prose p, .prose li {
            font-size: 1.125rem; /* 18px */
            line-height: 1.8;
            color: var(--text-secondary);
        }
        .prose blockquote {
            border-left: 4px solid var(--brand-color);
            padding: 1rem 1.5rem;
            font-style: italic;
            color: #334155;
            background-color: #fff7ed; /* orange-50 */
            margin-left: 0;
            border-radius: 0 0.5rem 0.5rem 0;
        }
        .nav-link {
            display: block;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            color: var(--text-secondary);
            transition: all 0.2s ease-in-out;
            font-weight: 500;
            border-left: 3px solid transparent;
        }
        .nav-link:hover {
            background-color: #f1f5f9; /* slate-100 */
            color: var(--brand-color-dark);
        }
        .nav-link.active {
            background-color: var(--brand-color-light);
            color: var(--brand-color-dark);
            font-weight: 700;
            border-left: 3px solid var(--brand-color);
        }
        .card {
            background-color: white;
            border-radius: 0.75rem;
            padding: 2.5rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.05), 0 1px 2px -1px rgb(0 0 0 / 0.05);
            border: 1px solid #e2e8f0;
        }
        .lead-card {
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.07), 0 4px 6px -4px rgb(0 0 0 / 0.07);
            transition: all 0.3s ease;
            border: 1px solid #e2e8f0;
        }
        .lead-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
        }
        .lead-header { color: white; padding: 1.5rem; }
        .lead-body { padding: 2rem; background-color: white; }
        .pill {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        .tooltip {
            position: relative;
            display: inline-block;
            border-bottom: 1px dotted var(--text-primary);
            cursor: help;
        }
        .tooltip .tooltiptext {
            visibility: hidden; width: 280px; background-color: #1e293b; color: #fff;
            text-align: left; border-radius: 6px; padding: 12px; position: absolute;
            z-index: 10; bottom: 125%; left: 50%; margin-left: -140px;
            opacity: 0; transition: opacity 0.3s; font-weight: 400; font-size: 0.9rem;
        }
        .tooltip:hover .tooltiptext { visibility: visible; opacity: 1; }
        #back-to-top {
            position: fixed; bottom: 2rem; right: 2rem; display: none; transition: opacity 0.3s, visibility 0.3s; z-index: 50;
        }
        #mobile-menu-btn {
            display: none;
        }
        @media (max-width: 1024px) {
            #sidebar {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 280px;
                height: 100%;
                z-index: 40;
                transform: translateX(-100%);
                transition: transform 0.3s ease-in-out;
                box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            }
            #sidebar.open {
                display: block;
                transform: translateX(0);
            }
            #mobile-menu-btn {
                display: block;
            }
        }
    </style>
